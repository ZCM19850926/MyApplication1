        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">


            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/top_bar"
                android:textColor="@drawable/tab_textcolor"
                android:paddingBottom="2dip"
                android:paddingTop="7dip"
                android:drawableTop="@drawable/tab_share_btn"
                android:scaleType="matrix"
                android:onClick="tabSelectClick"
                android:text="@string/app_share"
                android:id="@+id/button3_tab_share"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                />
