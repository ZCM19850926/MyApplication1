                android:paddingTop="7dip"
                android:drawableTop="@drawable/tab_discover_btn"
                android:scaleType="matrix"
                android:onClick="tabSelectClick"
                android:text="@string/tab_discove"
                android:id="@+id/button2_tab_discover"
