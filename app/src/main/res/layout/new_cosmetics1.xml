<?xml version="1.0" encoding="UTF-8"?>

    <RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"

    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >

    <ImageView android:layout_height="100dp"
        android:layout_width="100dp"
        android:src="@mipmap/ic_launcher"

        android:layout_alignParentLeft="true"
         android:layout_alignParentTop="true"
          android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:id="@+id/imageView_Image"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/textView_Name"
        android:maxLines="3"
        android:ellipsize="start"

        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/imageView_Image"
        android:layout_toRightOf="@+id/imageView_Image"
        android:textColor="@color/base_actionbar5"
        android:textSize="14sp"
        android:text="产品标题部分内容。。。"
        android:layout_marginLeft="16dp"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/textView3_star"
        android:text="5星"
        android:layout_alignEnd="@+id/textView_Name"
        android:layout_alignBottom="@+id/imageView_Image"/>

    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/textView5_price"
        android:textColor="@color/base_actionbar3"
        android:textSize="12sp"
        android:text="$100.00"
        android:layout_alignStart="@+id/textView7_discountPrice"
        android:layout_below="@+id/textView7_discountPrice"/>

    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/textView7_discountPrice"
        android:textColor="@color/colorAccent"
        android:textSize="25sp"
        android:text="$50.00"
        android:layout_alignBottom="@+id/textView8_discount"
        android:layout_alignStart="@+id/textView_Name"/>

   <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/textView8_discount"
        android:textColor="@color/base_actionbar_bg"
        android:text="5.0折"
        android:layout_toEndOf="@+id/textView7_discountPrice"
        android:layout_above="@+id/textView3_star"
        android:layout_marginStart="42dp"
        android:background="@color/colorAccent"
        android:padding="2dp"/>

</RelativeLayout>